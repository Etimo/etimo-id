{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "requireExactSource": false,
  "configurations": [
    {
      "name": "[api] .NET Core Run",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/artifacts/bin/Etimo.Id.Api/Debug/net6.0/Etimo.Id.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Etimo.Id.Api",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "[api] .NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "[api] .NET Core Attach Docker",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "sourceFileMap": {
        "/app": "${workspaceRoot}/"
      },
      "pipeTransport": {
        "pipeCwd": "${workspaceRoot}",
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "etimo-id-api"],
        "quoteArgs": false,
        "debuggerPath": "/vsdbg/vsdbg"
      }
    },
    {
      "name": "[api] .NET Core WSL Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/artifacts/bin/Etimo.Id.Api/Debug/net6.0/Etimo.Id.Api",
      "args": [],
      "cwd": "${workspaceFolder}/src/Etimo.Id.Api",
      "stopAtEntry": false,
      "console": "internalConsole",
      "pipeTransport": {
        "pipeCwd": "${workspaceRoot}",
        "pipeProgram": "bash",
        "pipeArgs": ["-c"],
        "debuggerPath": "~/vsdbg/vsdbg"
      }
    },
    {
      "name": "[web] .NET Core Run",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/artifacts/bin/Etimo.Id.Web/Debug/net6.0/Etimo.Id.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Etimo.Id.Web",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "[web] .NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "[web] .NET Core Attach Docker",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "sourceFileMap": {
        "/app": "${workspaceRoot}/"
      },
      "pipeTransport": {
        "pipeCwd": "${workspaceRoot}",
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "etimo-id-web"],
        "quoteArgs": false,
        "debuggerPath": "/vsdbg/vsdbg"
      }
    },
    {
      "name": "[web] .NET Core WSL Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/artifacts/bin/Etimo.Id.Web/Debug/net6.0/Etimo.Id.Web",
      "args": [],
      "cwd": "${workspaceFolder}/src/Etimo.Id.Web",
      "stopAtEntry": false,
      "console": "internalConsole",
      "pipeTransport": {
        "pipeCwd": "${workspaceRoot}",
        "pipeProgram": "bash",
        "pipeArgs": ["-c"],
        "debuggerPath": "~/vsdbg/vsdbg"
      }
    }
  ]
}
